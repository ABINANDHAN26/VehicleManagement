<resources>
    <!-- Base application theme. -->
    <style name="Theme.VehicleManagement" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->

        <item name="android:actionMenuTextColor">@color/primary</item>
    </style>

<style name="Theme.VehicleManagement.BottomNavBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/primary</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/primary</item>
    <!-- Customize your theme here. -->
    <item name="font">@font/poppins_regular</item>
    <item name="android:actionMenuTextColor">@color/primary</item>
    </style>

    <style name="BottomNavigationItem" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>


    <style name="Theme.VehicleManagement.Spinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">#FFFFFF</item>

        <item name="colorControlActivated">@color/icon</item>
        <item name="android:actionMenuTextColor">@color/primary</item>
    </style>


    <style name="myTextInputLabel">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/icon</item>
    </style>

    <style name="Theme.VehicleManagement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VehicleManagement.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VehicleManagement.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">70%
        </item> <!-- Adjust the width percentage as needed -->
        <item name="android:windowMinWidthMinor">70%
        </item> <!-- Adjust the width percentage as needed -->
        <item name="android:minHeight">250dp</item> <!-- Adjust the height as needed -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Adjust the percentage to control the roundness -->
    </style>


</resources>